<div class="container-full">
<%= render 'layouts/header' %>
      <div class="row">
       
        <div class="col-lg-12 text-center v-center">
          
          <h1>Reset password</h1>
          
          <br />
          
          <div class="col-lg-12">
           <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
    
              <%= hidden_field_tag :email, @user.email %>
        
              <%= f.label :password %><br />
              <%= f.password_field :password, class: "input-group input-group-lg col-sm-offset-4 col-sm-4" %><br /><br />
        
              <%= f.label :password_confirmation, "Confirmation" %><br />
              <%= f.password_field :password_confirmation, class: "input-group input-group-lg col-sm-offset-4 col-sm-4" %><br /><br />
        
              <%= f.submit "Update password", class: "btn btn-lg btn-primary" %>
            <% end %>
          </div>
        </div>
        
      </div> <!-- /row -->
  
  	  <div class="row">
       
        <div class="col-lg-12 text-center v-center" style="font-size:39pt;">
          <a href="#"><i class="icon-google-plus"></i></a> <a href="#"><i class="icon-facebook"></i></a>  <a href="#"><i class="icon-twitter"></i></a> <a href="#"><i class="icon-github"></i></a> <a href="#"><i class="icon-pinterest"></i></a>
        </div>
      
      </div>
  
</div> <!-- /container full end -->